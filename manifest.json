{
  "manifest_version": 3,
  "name": "Zabbix Alert Notifier",
  "version": "1.1",
  "description": "Recebe notificações push instantâneas de alertas do Zabbix e exibe o número de problemas ativos.",
  "author": "Thomas Marcelino <lage.thomas@gmail.com>",
  "homepage_url": "https://wpmasters.com.br",
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
